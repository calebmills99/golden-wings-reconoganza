  "troubleshooting": {
    "common_issues": [
      {
        "error": "API token is invalid (401)",
        "solution": "Verify token format",
        "debug_command": "python -c \"import os; token=os.getenv('NOTION_SECRET'); print('Format:', token[:10])\"",
        "expected_format": "ntn_xxxxxxxx"
      },
      {
        "error": "Database not found (404)",
        "solution": "Check database sharing",
        "steps": [
          "Open database in Notion",
          "Click ... → Add connections",
          "Find integration and confirm"
        ]
      },
      {
        "error": "Database access failed",
        "solution": "Verify database permissions",
        "requirements": [
          "Integration has Edit permissions",
          "Database is in shared workspace"
        ]
      }
    ],
    "debug_commands": [
      {
        "name": "Test API connection",
        "command": "python -c \"import requests, os; token = os.getenv('NOTION_SECRET'); headers = {'Authorization': f'Bearer {token}', 'Content-Type': 'application/json'}; response = requests.get('https://api.notion.com/v1/users', headers=headers); print('Status:', response.status_code); print('Response:', response.text[:200])\"",
        "description": "Test basic API connectivity"
      },
      {
        "name": "Check token format",
        "command": "python -c \"import os; token=os.getenv('NOTION_SECRET'); print('Format:', token[:10]); print('Length:', len(token))\"",
        "description": "Verify token format and length"
      }
    ]
