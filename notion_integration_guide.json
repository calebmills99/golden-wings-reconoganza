{
  "title": "Golden Wings Content Hunter - Notion AI Integration Guide",
  "version": "1.0.0",
  "description": "Comprehensive guide for integrating Golden Wings documentary content with Notion using AI automation",
  "overview": {
    "description": "The Golden Wings Content Hunter automatically finds, ranks, and imports your documentary files into a Notion database. It processes your content library and creates organized, searchable entries with relevance scoring.",
    "prerequisites": [
      "Content Hunter script (already configured)",
      "TOP50.md file with ranked content",
      "Notion account and workspace",
      "Notion API integration token"
    ]
  },
  "quick_start": {
    "description": "One-command setup for Notion integration",
    "command": "python notion_integration.py",
    "working_directory": "D:\\golden-wings-reconoganza"
  },
  "setup_instructions": {
    "step1": {
      "title": "Get Your Notion API Token",
      "steps": [
        {
          "action": "Visit Notion Developers",
          "url": "https://developers.notion.com/"
        },
        {
          "action": "Create New Integration",
          "details": {
            "name": "Golden Wings Content Hunter",
            "description": "AI-powered documentary content management",
            "type": "Internal integration"
          }
        },
        {
          "action": "Copy Integration Token",
          "details": {
            "format": "ntn_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
            "note": "Important: This token starts with ntn_ (not secret_)"
          }
        }
      ]
    },
    "step2": {
      "title": "Update Environment Configuration",
      "options": [
        {
          "name": "Using .env file",
          "code": "export NOTION_SECRET=\"ntn_YOUR_TOKEN_HERE\"\nexport NOTION_DATABASE_ID=\"27a61556bff380fd9a07c7d754aedeb8\""
        },
        {
          "name": "Using PowerShell (recommended)",
          "code": "Set-ExecutionPolicy -ExecutionPolicy RemoteSigned -Scope CurrentUser\n.\\scripts\\set_env_vars.ps1"
        }
      ]
    },
    "step3": {
      "title": "Create or Configure Notion Database",
      "options": [
        {
          "name": "Create New Database",
          "steps": [
            "Open Notion in browser",
            "Create new database (use Table view)",
            "Set database title: Golden Wings Content Library",
            "Configure columns as specified in database schema"
          ]
        },
        {
          "name": "Use Existing Database",
          "steps": [
            "Open existing database",
            "Copy Database ID from URL",
            "Ensure required columns exist"
          ]
        }
      ]
    },
    "step4": {
      "title": "Share Database with Integration",
      "steps": [
        "Open Golden Wings database",
        "Click ... menu (top right)",
        "Select Add connections",
        "Search for: Golden Wings Content Hunter",
        "Click Confirm to share access"
      ]
    },
    "step5": {
      "title": "Test Integration",
      "command": "python notion_integration.py",
      "expected_output": {
        "status_code": 200,
        "message": "Notion API connection successful",
        "bot_name": "THE COLLECTIVE"
      }
    }
  },
  "usage_commands": {
    "basic_workflow": {
      "description": "Complete workflow (hunt + import)",
      "command": "python notion_integration.py"
    },
    "npm_scripts": {
      "hunt": "npm run hunt",
